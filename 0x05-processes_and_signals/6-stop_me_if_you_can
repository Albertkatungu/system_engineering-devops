#!/usr/bin/env bash
# Stop the 4-to_infinity_and_beyond process without using kill or killall

# Use pgrep to find PIDs of the process
pids=$(pgrep -f "4-to_infinity_and_beyond")

# Count how many processes were found
count=$(echo "$pids" | wc -l)

# Terminate each process using pkill
for pid in $pids; do
    pkill -P "$pid" -f "4-to_infinity_and_beyond" 2>/dev/null
done

# Output the number of processes killed
echo "$count"

